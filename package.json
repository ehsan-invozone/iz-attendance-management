{
  "name": "iz-attendance-management",
  "version": "1.0.0",
  "description": "Attendance Management System for InvoZone employees",
  "main": "index.js",
  "scripts": {
    "dev": "node index.js",
    "update:doc": "apidoc -i src/routes -o docs/",
    "prettier:check": "prettier --config .prettierrc --check \"src/**/*.{ts,css,html}\""
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint . --fix", "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix", "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehsan-invozone/iz-attendance-management.git"
  },
  "keywords": [
    "invozone",
    "attendance",
    "management"
  ],
  "author": "Ehsan Ali",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ehsan-invozone/iz-attendance-management/issues"
  },
  "homepage": "https://github.com/ehsan-invozone/iz-attendance-management#readme",
  "devDependencies": {
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4"
  }
}
